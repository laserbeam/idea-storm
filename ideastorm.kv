# Author: Catalin Balan
<BoardScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            id: toolbar
            size_hint_y: None
            height: '48dp'
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'New Idea'
                on_release: board.add_idea()
        RelativeLayout:
            IdeaBoard:
                toolbar: toolbar
                id: board

<IdeaBoard>:
    background: background
    # size_hint: None, None
    do_collide_after_children: True
    auto_bring_to_front: False
    IdeaBoardBackground:
        pos: 0, 0
        size: 2000, 2000
        id: background
        storm_widgets: root.storm_widgets

<BoardViewIdea>:
    size_hint: None, None
    size: title_widget.size[0] + 40, title_widget.size[1] + 40
    title_widget: title_widget
    RoundedRectangle:
        size: self.parent.size
    ResizingTextInput:
        padding: 0, 0, 0, 0
        id: title_widget
        background_active: ''
        background_normal: ''
        background_disabled_active: ''
        background_disabled_normal: ''
        size: 300, 48
        font_size: '24dp'
        text: root.text
        pos: 20, 20
        halign: 'center'
